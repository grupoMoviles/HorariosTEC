<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ver1.guiahorarios.progra1.CourseOrganization.GroupInfo_Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Segoe UI"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Grupo:"
        android:textColor="@color/purple"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/purple"
        android:fontFamily="Segoe UI"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/GIA_TV_Number"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sede:"
        android:textColor="@color/tec"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:fontFamily="Segoe UI"
        android:layout_below="@+id/GIA_TV_Number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/GIA_TV_Location"
        android:fontFamily="Segoe UI"
        android:textSize="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Segoe UI"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profesor:"
        android:id="@+id/textView3"
        android:layout_below="@+id/GIA_TV_Location"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textColor="@color/tec"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="20dp"
        android:id="@+id/GIA_TV_Teacher"
        android:layout_below="@+id/textView3"
        android:fontFamily="Segoe UI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Horario:"
        android:fontFamily="Segoe UI"
        android:textColor="@color/tec"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_below="@+id/GIA_TV_Teacher"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tec"
        android:id="@+id/GIA_LV"
        android:clickable="false"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:choiceMode="none" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:id="@+id/GIA_B_Add"
        android:onClick="addGroup"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/GIA_TV_Number"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook Friends"
        android:onClick="viewFriends"
        android:id="@+id/GIA_B_FaceFriends"
        android:textColor="#FFFFFF"
        android:background="#3c60ff"
        android:layout_alignTop="@+id/GIA_TV_Location"
        android:layout_alignRight="@+id/GIA_LV"
        android:layout_alignEnd="@+id/GIA_LV" />


</RelativeLayout>
