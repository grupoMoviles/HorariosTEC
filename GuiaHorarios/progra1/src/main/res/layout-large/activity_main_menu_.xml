<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="ver1.guiahorarios.progra1.Menu.MainMenu_Activity">



    <TextView
        android:text="GuÃ­a"
        android:textSize="50dp"
        android:textColor="@color/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="SegoeUI" />

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="SegoeUI"
        android:textColor="@color/purple"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="de"
        android:layout_marginTop="-10dp"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        android:fontFamily="SegoeUI"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Horarios"
        android:textSize="50dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/tec"
        android:fontFamily="aparajita"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TEC"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnMisCursos"
        android:onClick="switchUserCourses"
        android:background="@drawable/btn3"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView2"
        />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnMiHorario"
        android:onClick="switchScheduleActivity"
        android:layout_alignTop="@+id/btnMisCursos"
        android:layout_toRightOf="@+id/textView2"
        android:background="@drawable/btn4"
        android:layout_above="@+id/btnProfesores"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:onClick="switchTeachers"
        android:id="@+id/btnProfesores"
        android:layout_marginTop="73dp"
        android:background="@drawable/btn2"
        android:layout_below="@+id/btnMisCursos"
        android:layout_toLeftOf="@+id/textView2"
        />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnCursos"
        android:onClick="switchAllCourses"
        android:background="@drawable/btn1"
        android:layout_alignTop="@+id/btnProfesores"
        android:layout_alignLeft="@+id/btnMiHorario"
        android:layout_alignStart="@+id/btnMiHorario"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="username"
        android:fontFamily="SegoeUI"
        android:id="@+id/txtusr"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="cursos"
        android:fontFamily="SegoeUI"
        android:id="@+id/txtcursos"
        android:layout_alignTop="@+id/txtgrupos"
        android:layout_toLeftOf="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="grupos"
        android:fontFamily="SegoeUI"
        android:id="@+id/txtgrupos"
        android:layout_above="@+id/btnMiHorario"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"/>

</RelativeLayout>